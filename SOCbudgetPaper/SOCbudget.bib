@article{kustermann_modeling_2008,
  title = {Modeling Carbon Cycles and Estimation of Greenhouse Gas Emissions from Organic and Conventional Farming Systems},
  author = {K{\"u}stermann, Bj{\"o}rn and Kainz, Maximilian and H{\"u}lsbergen, Kurt-J{\"u}rgen},
  year = {2008},
  month = mar,
