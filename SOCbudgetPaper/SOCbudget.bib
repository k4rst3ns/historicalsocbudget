	number = {10},
	urldate = {2019-03-01},
	journal = {Environmental Research Letters},
	author = {Frank, Stefan and Havlík, Petr and Soussana, Jean-François and Levesque, Antoine and Valin, Hugo and Wollenberg, Eva and Kleinwechter, Ulrich and Fricko, Oliver and Gusti, Mykola and Herrero, Mario and Smith, Pete and Hasegawa, Tomoko and Kraxner, Florian and Obersteiner, Michael},
