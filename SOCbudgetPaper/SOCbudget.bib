  author   = {Bonsch, Markus and Humpen{\"o}der, Florian and Popp, Alexander and Bodirsky, Benjamin and Dietrich, Jan Philipp and Rolinski, Susanne and Biewald, Anne and {Lotze-Campen}, Hermann and Weindl, Isabelle and Gerten, Dieter and Stevanovic, Miodrag},
