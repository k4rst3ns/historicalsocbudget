@Article{escribano_beef_2016,
  author    = {Escribano, Alfredo J.},
  journal   = {Sustainability},
  title     = {Beef {{Cattle Farms}}' {{Conversion}} to the {{Organic System}}. {{Recommendations}} for {{Success}} in the {{Face}} of {{Future Changes}} in a {{Global Context}}},
