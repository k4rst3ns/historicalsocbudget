	number = {12},
	urldate = {2019-05-03},
	journal = {Global Change Biology},
	author = {Xia, Longlong and Lam, Shu Kee and Wolf, Benjamin and Kiese, Ralf and Chen, Deli and Butterbach‐Bahl, Klaus},
	year = {2018},
	keywords = {carbon sequestration, crop productivity, ammonia emission, reactive N losses, straw return, trade-off relationship},
	pages = {5919--5932},
	file = {Full Text PDF:/home/kristine/Zotero/storage/TW7VBIPT/Xia et al. - 2018 - Trade-offs between soil carbon sequestration and r.pdf:application/pdf;Snapshot:/home/kristine/Zotero/storage/DU5XKMMQ/gcb.html:text/html}
}

@article{chen_long-term_2018,
	title = {The long-term role of organic amendments in building soil nutrient fertility: a meta-analysis and review},
	volume = {111},
	issn = {1573-0867},
