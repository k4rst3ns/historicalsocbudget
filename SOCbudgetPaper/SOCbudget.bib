@InCollection{webb_emissions_2012,
  author    = {Webb, J. and Sommer, Sven G. and Kupper, Thomas and Groenestein, Karin and Hutchings, Nicholas J. and {Eurich-Menden}, Brigitte and Rodhe, Lena and Misselbrook, Thomas H. and Amon, Barbara},
  booktitle = {Agroecology and {{Strategies}} for {{Climate Change}}},
  publisher = {{Springer Netherlands}},
  title     = {Emissions of {{Ammonia}}, {{Nitrous Oxide}} and {{Methane During}} the {{Management}} of {{Solid Manures}}},
