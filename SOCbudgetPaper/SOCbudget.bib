	keywords = {nitrogen, Tillage, Aridity, Crop rotation, Irrigation, No-till duration, Residue},
	pages = {156--168},
	file = {ScienceDirect Full Text PDF:/home/kristine/Zotero/storage/I9NPEW2H/Pittelkow et al. - 2015 - When does no-till yield more A global meta-analys.pdf:application/pdf;ScienceDirect Snapshot:/home/kristine/Zotero/storage/8JVHGAZB/S0378429015300228.html:text/html}
