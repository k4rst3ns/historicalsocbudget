  file     = {/home/kristine/Zotero/storage/MTAY33VQ/Küstermann et al. - 2008 - Modeling carbon cycles and estimation of greenhous.pdf;/home/kristine/Zotero/storage/SG8KR6FM/Küstermann et al. - 2008 - Modeling carbon cycles and estimation of greenhous.pdf;/home/kristine/Zotero/storage/4P455HXJ/D8E1FF1C7445D4B95109B60859D20A08.html;/home/kristine/Zotero/storage/DBYL833B/D8E1FF1C7445D4B95109B60859D20A08.html},
