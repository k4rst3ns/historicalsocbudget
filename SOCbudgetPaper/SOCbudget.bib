@article{pugh_simulated_2015,
  title = {Simulated Carbon Emissions from Land-Use Change Are Substantially Enhanced by Accounting for Agricultural Management},
  author = {Pugh, T. A. M. and Arneth, A. and Olin, S. and Ahlstr{\"o}m, A. and Bayer, A. D. and Goldewijk, K. Klein and Lindeskog, M. and Schurgers, G.},
  year = {2015},
  volume = {10},
