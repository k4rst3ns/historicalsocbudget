}

@Article{schulze_importance_2009,
  author    = {Schulze, E. D. and Luyssaert, S. and Ciais, P. and Freibauer, A. and Janssens, I. A. and Soussana, J. F. and Smith, P. and Grace, J. and Levin, I. and Thiruchittampalam, B. and Heimann, M. and Dolman, A. J. and Valentini, R. and Bousquet, P. and Peylin, P. and Peters, W. and R{\"o}denbeck, C. and Etiope, G. and Vuichard, N. and Wattenbach, M. and Nabuurs, G. J. and Poussi, Z. and Nieschulze, J. and Gash, J. H. and Team, the CarboEurope},
