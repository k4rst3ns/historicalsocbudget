  author = {Schaphoff, Sibyll and Forkel, Matthias and M{\"u}ller, Christoph and Knauer, J{\"u}rgen and {von Bloh}, Werner and Gerten, Dieter and J{\"a}germeyr, Jonas and Lucht, Wolfgang and Rammig, Anja and Thonicke, Kirsten and Waha, Katharina},
