@article{poeplau_carbon_2015,
  title = {Carbon Sequestration in Agricultural Soils via Cultivation of Cover Crops \textendash{} {{A}} Meta-Analysis},
  author = {Poeplau, Christopher and Don, Axel},
  year = {2015},
  month = feb,
  volume = {200},
