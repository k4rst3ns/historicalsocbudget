@article{pratt_does_2015,
  title = {Does Manure Management Affect the Latent Greenhouse Gas Emitting Potential of Livestock Manures?},
  author = {Pratt, Chris and Redding, Matthew and Hill, Jaye and Jensen, Paul D.},
  year = {2015},
  month = dec,
  volume = {46},
