	year = {2005},
	keywords = {soil degradation, Cropping systems, Gaseous flux, Global carbon cycle, soil erosion, The greenhouse effect},
	pages = {137--142},
	file = {ScienceDirect Snapshot:/home/kristine/Zotero/storage/NQT2SRG4/S0167198704001898.html:text/html}
