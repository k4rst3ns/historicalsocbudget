@article{marconi_role_2017,
	title = {The {Role} of {Respiration} in {Estimation} of {Net} {Carbon} {Cycle}: {Coupling} {Soil} {Carbon} {Dynamics} and {Canopy} {Turnover} in a {Novel} {Version} of {3D}-{CMCC} {Forest} {Ecosystem} {Model}},
