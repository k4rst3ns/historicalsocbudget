	journal = {Environmental Research Letters},
	author = {Humpenöder, Florian and Popp, Alexander and Dietrich, Jan Philip and Klein, David and Lotze-Campen, Hermann and {Markus Bonsch} and Bodirsky, Benjamin Leon and Weindl, Isabelle and Stevanovic, Miodrag and Müller, Christoph},
