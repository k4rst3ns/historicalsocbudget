  file      = {/home/kristine/Zotero/storage/NQ5Q4U3W/Rogelj et al. - 2018 - Scenarios towards limiting global mean temperature.pdf;/home/kristine/Zotero/storage/KVICIPA7/s41558-018-0091-3.html},
